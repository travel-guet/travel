<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9eef0"
    android:orientation="vertical"
    tools:context="com.example.travel.travel.fragment.HomeFragment">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/toolbar_color"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/home_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="主页"
                android:textColor="@color/toolbar_text_color"
                android:textSize="@dimen/activity_title" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>


    <com.example.travel.travel.customview.ImageCycleView
        android:id="@+id/image_circle_view_pager"
        android:layout_width="match_parent"
        android:layout_height="200dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            >

            <!--*************景区门票，导游预订，市内江船票*********-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--*********景区门票**********-->
                <LinearLayout
                    android:id="@+id/parkland_ticket_linear_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/homepage_text_background"
                        android:gravity="center"
                        android:text="景区门票"
                        android:textColor="#333333"
                        android:textSize="15dp"

                        />
                </LinearLayout>

                <!--*********导游预订**********-->
                <LinearLayout
                    android:id="@+id/tour_guide_reserve_linear_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/homepage_text_background"
                        android:gravity="center"
                        android:text="导游预订"
                        android:textColor="#333333"
                        android:textSize="15dp"

                        />
                </LinearLayout>


                <!--*********市内江船票**********-->
                <LinearLayout
                    android:id="@+id/inside_city_reserve_ticket_linear_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1.2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/homepage_text_background"
                        android:gravity="center"
                        android:text="市内江船票"
                        android:textColor="#333333"
                        android:textSize="15dp"

                        />
                </LinearLayout>


            </LinearLayout>


            <!--*************线路预订，酒店预订，两江四胡船票船票*********-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--*********线路预订**********-->
                <LinearLayout
                    android:id="@+id/route_reserve_linear_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/homepage_text_background"
                        android:gravity="center"
                        android:text="线路预订"
                        android:textColor="#333333"
                        android:textSize="15dp"

                        />
                </LinearLayout>

                <!--*********酒店预订**********-->
                <LinearLayout
                    android:id="@+id/hotel_reserve_linear_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/homepage_text_background"
                        android:gravity="center"
                        android:text="酒店预订"
                        android:textColor="#333333"
                        android:textSize="15dp"

                        />
                </LinearLayout>


                <!--*********两江四湖船票**********-->
                <LinearLayout
                    android:id="@+id/two_river_four_lake_boat_ticket_linear_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1.2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/homepage_text_background"
                        android:gravity="center"
                        android:text="两江四湖船票"
                        android:textColor="#333333"
                        android:textSize="15dp"

                        />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#e9eef0"
            />

        <ListView
            android:id="@+id/travel_note_list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></ListView>

    </LinearLayout>


</LinearLayout>
